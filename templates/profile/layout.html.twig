{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col col-md-3">
            <div class="list-group">
                <a href="{{ path('fos_user_profile_show') }}" class="list-group-item list-group-item-action{{ app.request.get('_route') in ['fos_user_profile_show', 'fos_user_profile_edit'] ? ' active' }}">
                    <i class="fas fa-fw fa-user mr-1"></i> Profile
                </a>
                <a href="{{ path('profile_security') }}" class="list-group-item list-group-item-action{{ app.request.get('_route') in ['profile_security', 'fos_user_change_password'] ? ' active' }}">
                    <i class="fas fa-fw fa-lock mr-1"></i> Security
                </a>
                <a href="{{ path('profile_driver_token') }}" class="list-group-item list-group-item-action{{ app.request.get('_route') in ['profile_driver_token'] ? ' active' }}">
                    <i class="fas fa-fw fa-key mr-1"></i> Driver Token
                </a>
            </div>
        </div>
        <div class="col">
            <h1>
                {% block title %}{% endblock %}
            </h1>

            <hr>
            <div class="card">
                <div class="card-body">
            {% block fos_user_content %}{% endblock %}
            {% block profile_content %}{% endblock %}
                </div>
            </div>

        </div>
    </div>
{% endblock %}
