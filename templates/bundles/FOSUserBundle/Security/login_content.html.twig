{% trans_default_domain 'FOSUserBundle' %}

<h1 class="mb-3 font-weight-light">Login</h1>

{% if error %}
    <div class="alert alert-danger" role="alert">
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="mt-3">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}


    <div class="form-label-group">
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control" autofocus placeholder="{{ 'security.login.username'|trans }}">
        <label for="username">{{ 'security.login.username'|trans }}</label>
    </div>

    <div class="form-label-group">
        <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control" placeholder="{{ 'security.login.password'|trans }}">
        <label for="password">{{ 'security.login.password'|trans }}</label>
        <small class="form-text text-muted text-right">
            <a href="{{ path('fos_user_resetting_request') }}">{{ 'resetting.request.submit'|trans }}</a>
        </small>
    </div>

    <div class="d-flex align-items-center">
        <div class="form-group form-check mr-auto mb-0">
            <div class="checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" class="form-check-input" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>

        <input type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary" value="{{ 'security.login.submit'|trans }}">
    </div>
</form>
